<h1 style="margin-bottom: 20px;">{{title}}</h1>

<!-- ğŸ§ª ID del carrito para agregar productos -->
<input type="hidden" id="defaultCartId" value="67f036aa831ad74bf15dd51b">

<!-- ğŸ”— BotÃ³n para ver el carrito -->
<a href="/carts/67f036aa831ad74bf15dd51b">
  <button style="margin-bottom: 20px;">ğŸ›ï¸ Ver carrito de compras</button>
</a>

<!-- ğŸ“ Formulario para crear o editar productos -->
<form id="productForm" style="display: flex; flex-direction: column; gap: 10px; max-width: 400px;">
  <input type="hidden" id="productId">
  <input type="text" id="name" placeholder="Nombre" required>
  <input type="number" id="price" placeholder="Precio" required>
  <input type="text" id="description" placeholder="DescripciÃ³n" required>
  <input type="number" id="stock" placeholder="Stock" required>
  <input type="text" id="thumbnails" placeholder="URL imagen" required>
  <button type="submit" style="padding: 10px;">ğŸ’¾ Guardar producto</button>
</form>

<hr>

<!-- ğŸ“‹ Tabla de productos -->
<div style="overflow-x: auto; margin-top: 30px;">
  <table border="1" cellpadding="8" cellspacing="0" style="width: 100%; border-collapse: collapse; min-width: 800px;">
    <thead style="background-color: #f0f0f0;">
      <tr>
        <th>Imagen</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>DescripciÃ³n</th>
        <th>Stock</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody id="productTableBody">
      {{#each products}}
        <tr data-product-id="{{this._id}}">
          <td><img src="{{this.thumbnails.[0]}}" width="60" alt="img"></td>
          <td>{{this.name}}</td>
          <td>$ {{this.price}}</td>
          <td>{{this.description}}</td>
          <td>{{this.stock}}</td>
          <td>
            <button onclick="addToCart('{{this._id}}')">ğŸ›’</button>
            <button onclick="loadProductToEdit(`{{this._id}}`, `{{this.name}}`, `{{this.price}}`, `{{this.description}}`, `{{this.stock}}`, `{{this.thumbnails.[0]}}`)">âœï¸</button>
            <button class="btn-delete" data-id="{{this._id}}">âŒ</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- ğŸ”½ PaginaciÃ³n -->
<div style="margin-top: 30px; display: flex; align-items: center; gap: 15px;">
  {{#if hasPrevPage}}
    <a href="{{prevLink}}">
      <button>â¬…ï¸ PÃ¡gina anterior</button>
    </a>
  {{/if}}
  <span>PÃ¡gina {{page}} de {{totalPages}}</span>
  {{#if hasNextPage}}
    <a href="{{nextLink}}">
      <button>PÃ¡gina siguiente â¡ï¸</button>
    </a>
  {{/if}}
</div>

<!-- ğŸ§  Scripts -->
<script>
  const form = document.getElementById('productForm');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    const id = document.getElementById('productId').value;
    const name = document.getElementById('name').value;
    const price = document.getElementById('price').value;
    const description = document.getElementById('description').value;
    const stock = document.getElementById('stock').value;
    const thumbnails = document.getElementById('thumbnails').value;
    const product = { name, price, description, stock, thumbnails: [thumbnails] };
    const url = id ? `/api/products/${id}` : '/api/products';
    const method = id ? 'PUT' : 'POST';

    const response = await fetch(url, {
      method,
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(product)
    });

    if (response.ok) {
      alert(id ? "âœ… Producto actualizado" : "âœ… Producto creado");
      window.location.href = "/products";
    } else {
      alert("âŒ Error en la operaciÃ³n");
    }
  });

  function loadProductToEdit(id, name, price, description, stock, thumbnail) {
    document.getElementById('productId').value = id;
    document.getElementById('name').value = name;
    document.getElementById('price').value = price;
    document.getElementById('description').value = description;
    document.getElementById('stock').value = stock;
    document.getElementById('thumbnails').value = thumbnail;
    window.scrollTo({ top: 0, behavior: "smooth" });
  }

  function addToCart(productId) {
    const cartId = document.getElementById('defaultCartId').value;
    if (!cartId) {
      alert("âš ï¸ No hay carrito disponible.");
      return;
    }

    fetch(`/api/carts/${cartId}/products/${productId}`, {
      method: 'POST',
    })
    .then(res => {
      if (res.ok) {
        alert("âœ… Producto agregado al carrito");
      } else {
        alert("âŒ No se pudo agregar al carrito");
      }
    })
    .catch(err => {
      console.error("Error:", err);
      alert("âŒ Error al conectar con el servidor");
    });
  }

  // âœ… Nueva lÃ³gica de eliminaciÃ³n directa del DOM
  document.addEventListener('click', async (event) => {
    if (event.target.classList.contains('btn-delete')) {
      const id = event.target.dataset.id;
      if (confirm("Â¿Eliminar este producto?")) {
        try {
          const res = await fetch(`/api/products/${id}`, {
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' }
          });
          const data = await res.json();
          if (res.ok) {
            alert("âœ… Producto eliminado");
            const row = event.target.closest('tr');
            if (row) row.remove();
          } else {
            alert(data.error || "âŒ No se pudo eliminar el producto");
          }
        } catch (err) {
          console.error("âŒ Error al conectar con el servidor:", err);
          alert("âŒ Error al conectar con el servidor");
        }
      }
    }
  });
</script>
