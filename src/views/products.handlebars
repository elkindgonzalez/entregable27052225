      <tr>
        <th>Imagen</th>
        <th>TÃ­tulo</th>
        <th>Precio</th>
        <th>DescripciÃ³n</th>
        <th>Stock</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody id="productTableBody">
      {{#each products}}
        <tr data-product-id="{{this._id}}">
